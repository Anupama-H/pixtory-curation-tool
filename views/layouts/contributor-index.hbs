<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Pixtory Curation Tool</title>
    {{#ifEqual mode "development"}}
    <link type="text/css" rel="stylesheet" href="/portal/stylesheets/normalize.css" />
    <link type="text/css" rel="stylesheet" href="/portal/stylesheets/skeleton.css" />
    <link type="text/css" rel="stylesheet" href="/portal/stylesheets/croppie.css" />
    <link type="text/css" rel="stylesheet" href="/portal/stylesheets/styles.css" />
    {{else}}
    <link type="text/css" rel="stylesheet"  href="/portal/stylesheets/dist/styles.min.css?v={{assetVersion}}" />
    {{/ifEqual}}
    <link type="text/css" rel="stylesheet" href="http://fonts.googleapis.com/css?family=Roboto" />
    <!-- Google authentication script -->
    <script src="https://apis.google.com/js/platform.js"></script>
</head>
<body>
    <hr class="top-line"/>
    {{#ifNotEqual page "LOGIN"}}
    {{>contrib-top-bar}}
    <div class="container content-body">
        <div class="row">
            {{#if hideLeftNav}}
            <div class="twelve columns">
                <!-- container for messages -->
                <div class="row">
                    <div class="twelve columns msg hidden jsMessage"></div>
                </div>
                {{{body}}}
            </div>
            {{else}}
            <div class="two columns">
                {{>contributor-nav}}
            </div>
            <div class="ten columns">
                <!-- container for messages -->
                <div class="row">
                    <div class="twelve columns msg hidden jsMessage"></div>
                </div>
                {{{body}}}
            </div>
            {{/if}}
        </div>
    </div>
    {{else}}
    <!-- Login Page -->
    {{{body}}}
    {{/ifNotEqual}}
    {{>contrib-page-scripts}}
</body>
</html>
